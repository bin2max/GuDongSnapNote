.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  margin-bottom: 80rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

/* 终端选择器样式 */
.terminal-selector {
  background: rgba(255,255,255,0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255,255,255,0.2);
  width: 100%;
  box-sizing: border-box;
}

.selector-title {
  display: block;
  font-size: 28rpx;
  color: white;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.terminal-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.terminal-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255,255,255,0.2);
  border: 2rpx solid rgba(255,255,255,0.3);
  border-radius: 15rpx;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.terminal-btn.active {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-color: #FFD700;
  color: #333;
  box-shadow: 0 4rpx 15rpx rgba(255, 215, 0, 0.3);
}

.terminal-btn:active {
  transform: scale(0.95);
}

.current-terminal {
  display: block;
  font-size: 24rpx;
  color: #FFD700;
  text-align: center;
  font-weight: bold;
}

/* 禁用状态样式 */
.btn-primary[disabled], .btn-secondary[disabled] {
  background: rgba(255,255,255,0.1);
  color: rgba(255,255,255,0.5);
  box-shadow: none;
}

.btn-primary[disabled]:active, .btn-secondary[disabled]:active {
  transform: none;
}

.main-buttons {
  width: 100%;
  margin-bottom: 60rpx;
}

.btn-primary, .btn-secondary {
  width: 100%;
  height: 120rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.btn-secondary {
  background: linear-gradient(135deg, #2196F3, #1976D2);
}

.btn-primary:active, .btn-secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

.btn-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.secondary-buttons {
  width: 100%;
}

.btn-history, .btn-test-env {
  width: 100%;
  height: 80rpx;
  background: rgba(255,255,255,0.2);
  border: 2rpx solid rgba(255,255,255,0.3);
  border-radius: 15rpx;
  color: white;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
  margin-bottom: 20rpx;
} 