.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.comparison-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.cargo-section {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.cargo-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.cargo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.cargo-item.in {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.cargo-item.out {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
}

.cargo-name {
  font-weight: bold;
}

.cargo-count {
  background: rgba(255,255,255,0.2);
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.result-section {
  margin-bottom: 40rpx;
}

.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 25rpx rgba(0,0,0,0.15);
  border: 4rpx solid;
}

.result-card.allowed {
  border-color: #4CAF50;
  background: linear-gradient(135deg, #E8F5E8, #C8E6C9);
}

.result-card.blocked {
  border-color: #f44336;
  background: linear-gradient(135deg, #FFEBEE, #FFCDD2);
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.result-text {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.result-card.allowed .result-text {
  color: #2E7D32;
}

.result-card.blocked .result-text {
  color: #C62828;
}

.result-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.button-section {
  display: flex;
  gap: 20rpx;
}

.btn-primary, .btn-secondary {
  flex: 1;
  height: 90rpx;
  border-radius: 15rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.2);
}

.btn-primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.btn-secondary {
  background: linear-gradient(135deg, #757575, #616161);
}

.btn-text {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
} 