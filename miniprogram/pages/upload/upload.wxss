.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: white;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 拍照区域样式 */
.section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}

.section-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.title-desc {
  font-size: 24rpx;
  color: #999;
}

.image-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.upload-area {
  width: 100%;
  height: 300rpx;
  border: 3rpx dashed #ddd;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn-camera, .btn-album {
  flex: 1;
  height: 80rpx;
  border-radius: 15rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-camera {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.btn-album {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

/* 识别结果样式 */
.recognition-result {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  border-left: 4rpx solid #4CAF50;
}

.result-item {
  display: flex;
  margin-bottom: 10rpx;
}

.result-label {
  font-size: 26rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.result-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.cargo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.cargo-item {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.cargo-name {
  font-weight: bold;
}

.cargo-count {
  background: rgba(255,255,255,0.2);
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}

.cargo-confidence {
  background: rgba(255,255,255,0.3);
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

/* 底部按钮 */
.bottom-section {
  padding: 30rpx;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.btn-next {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #FF9800, #F57C00);
  border-radius: 15rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(255,152,0,0.3);
}

.btn-next.disabled {
  background: #ccc;
  box-shadow: none;
}

.btn-next .btn-text {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
} 